import java.sql.SQLOutput;
import java.util.Scanner;


class virtualPet {
    public virtualPet(int i) {
    }

    ////                       public int getBalance() {
////        return 0;
//    }
    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);

        System.out.println(" Hello Im Gizmo Your Virtual Pet");

        System.out.println("What is your name: ");
        String name = input.nextLine();

        System.out.println("Hello " + name + " Lets Play !");


        System.out.println(" What would you like to do ? ");
        System.out.println("Press 1 to play fetch");
        System.out.println("Press 2 to feed me");
        System.out.println("Press 3 to give me water");
        System.out.println("Press 4 to take me for a walk");
        System.out.println("Press 5 to say bye");
        String userChoice = input.nextLine();

        while (!userChoice.equals("4")) {
            if (userChoice.equals("1")) {
                System.out.println(" Lets play fetch");
                input.nextLine();
            } else if (userChoice.equals("2")) {
                System.out.println("Thanks for the food");
                input.nextLine();
            } else if (userChoice.equals("3")) {
                System.out.println("Thanks for the water");
                input.nextLine();
            } else if (userChoice.equals("4")) {
                System.out.println("Time to walk");
                input.nextLine();
            } else if (userChoice.equals("5")) {
                System.out.println(" See Ya soon!");
                input.nextLine();
            } else {
                System.out.println("I'm sorry I don't understand");
                input.nextLine();
            }

            System.out.println("Press 1 to play fetch");
            System.out.println("Press 2 to feed me");
            System.out.println("Press 3 to give me water");
            System.out.println("Press 4 to take me for a walk");
            System.out.println("Press 5 to say bye");
            userChoice = input.nextLine();

        }

    }


}
